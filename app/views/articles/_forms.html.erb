<% if @article.errors.any? %>
<h3>There is an error</h3>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li> 
    <% end %>
  </ul>
<% end %>

<%= form_for @article do |f|%>
  <div>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div> 
    <%= f.label :description %> <br>
    <%= f.text_area :description %>
  </div>
  <p><%= f.submit%></p>
<% end %> 

<p><%= link_to"back to article listing", articles_path%></p>