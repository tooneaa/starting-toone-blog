<h1 align= "center" style="width:90%"> All Alpha Bloggers</h1>
  <div align="center"> 
   <%= will_paginate (@user) %>
    <% @user.each do |user|%>
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="well well-lg">
          <ul class="listing">
            <% if user.email %>
              <% gravure = gravatar_for(user)%>
              <%= content_tag :li , (link_to gravure, user_path(user))%>
            <% else %>
            <%end%>
            <li class="article-title">
              <%= link_to user.username.capitalize, user_path(user)%>
            </li>
            <li><small><%= pluralize(user.articles.count, 'article') if user.articles%> </small></li>
            <li><% if logged_in? and current_user.admin? %>
                  <%= link_to "Delete this user",user_path(user), method: :delete, data: { confirm: "Are you sure?? All data will be gone"} %>
                <% end %>
            </li>
          </ul>
        </div>
      </div>
    </div>
 
  <% end %> 
   <%= will_paginate (@user)%>
  </div> 